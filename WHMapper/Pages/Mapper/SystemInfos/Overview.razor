<MudCard Class="@(CurrentSystemNode == null ? "invisible pa-5" : "visible pa-5")" Outlined="true" style="height:99%;width:99%;">
    <MudGrid Justify="Justify.SpaceBetween">
        <MudItem xs="1">
            <MudText Typo="Typo.body2">Name:</MudText>
        </MudItem>
        <MudItem xs="0">
            <MudText Typo="Typo.body2" Style="font-weight:bold;">@(CurrentSystemNode != null && !String.IsNullOrWhiteSpace(CurrentSystemNode?.Name) ? CurrentSystemNode.Name : String.Empty)</MudText>
        </MudItem>
    </MudGrid>

    <MudGrid Justify="Justify.SpaceBetween">
        <MudItem xs="1">
            <MudText Typo="Typo.body2">Security:</MudText>
        </MudItem>
        <MudItem xs="0">
            <MudText Typo="Typo.body2" Style="@($"color:{_secColor};")">@(CurrentSystemNode != null  ? CurrentSystemNode.SecurityStatus : String.Empty)</MudText>
        </MudItem>
    </MudGrid>

    <MudGrid Justify="Justify.SpaceBetween">
        <MudItem xs="1">
            <MudText Typo="Typo.body2">Class:</MudText>
        </MudItem>
        <MudItem xs="0">
            <MudText Typo="Typo.body2" Style="@($"color:{_systemColor}; font-weight:bold;")">@(CurrentSystemNode!=null && !String.IsNullOrWhiteSpace(CurrentSystemNode?.Class) ? CurrentSystemNode.Class : String.Empty)</MudText>
        </MudItem>
    </MudGrid>

    <MudGrid Justify="Justify.SpaceBetween" Class="@(_showWHInfos ? "visible" : "invisible")">
        <MudItem xs="1">
            <MudText Typo="Typo.body2">Effect:</MudText>
        </MudItem>
        <MudItem xs="0">
            <MudText Typo="Typo.body2" Class="d-inline-flex">@(CurrentSystemNode != null &&  !String.IsNullOrWhiteSpace(CurrentSystemNode?.Effect) ? CurrentSystemNode.Effect : "No Effect")</MudText>
            @if (CurrentSystemNode?.EffectsInfos != null)
            {
                <MudTooltip Text="Arrow Right" Arrow="true" Placement="Placement.Bottom">
                    <ChildContent>
                        <MudIcon Icon="@Icons.Material.Filled.Square" Class="d-inline-flex" Size="Size.Small" DisableElevation="true" Style="@($"color:{_whEffectColor};")"/>
                    </ChildContent>
                    <TooltipContent>
                        <MudPaper Class="d-flex flex-column flex-grow-1 gap-1" Elevation="0">
                            @foreach (var effectInfo in CurrentSystemNode?.EffectsInfos)
                            {
                                <MudText class="ml-1 mr-1" Typo="Typo.caption">@effectInfo.Key : @effectInfo.Value</MudText>
                            }
                        </MudPaper>
                    </TooltipContent>
                </MudTooltip>
            }
        </MudItem>
    </MudGrid>

    <MudGrid Justify="Justify.SpaceBetween" Class="@(_showWHInfos ? "visible" : "invisible")">
        <MudItem xs="1">
            <MudText Typo="Typo.body2">Statics:</MudText>
        </MudItem>
        <MudItem xs="0">
            @if (CurrentSystemNode != null && CurrentSystemNode.Statics != null && CurrentSystemNode.Statics.Count() > 0)
            {
                foreach (var item in CurrentSystemNode.Statics)
                {
                    <MudText Typo="Typo.body2" Class="d-inline-flex ml-1">@item.Key</MudText>
                    <MudText Typo="Typo.body2" Class="d-inline-flex" Style="@($"color:{WHColorHelper.GetSystemTypeColor(item.Value)}; font-weight:bold;")">@item.Value</MudText>
                }
            }
        </MudItem>
    </MudGrid>
</MudCard>