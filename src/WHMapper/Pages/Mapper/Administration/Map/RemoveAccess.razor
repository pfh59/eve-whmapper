<MudDialog>
    <DialogContent>
        @if (MapId > 0)
        {
            <MudText Class="pointer-events-none">@MSG_DELETE_ACCESS</MudText>
        }
        else
        {
            <MudText Class="pointer-events-none">@MSG_DELETE_ACCESSES</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Delete Access</MudButton>
    </DialogActions>
</MudDialog>

