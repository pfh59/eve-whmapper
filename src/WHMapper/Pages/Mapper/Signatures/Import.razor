<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="Success" @ref="_form">
            <MudStack Row="true">
                <MudTextField T="string" Variant="Variant.Outlined" @bind-Value="ScanResult"
                        Label="Scan Result" Lines="10" Required="true"
                        RequiredError="Required Scan Result!" Validation="@_ccValidator.Validation" Immediate="true"/>
            
                <MudTable Items=@AnalyzesSignatures Outlined="true" Hover="false" Dense="true" Bordered=true Striped=true AllowUnsorted=false FixedHeader="true" ReadOnly="true"
                    Virtualize="true" Loading="@(AnalyzesSignatures==null)" LoadingProgressColor="Color.Info" Editable="false" Height="calc(100%)" HorizontalScrollbar="false"  RowStyleFunc="RowStyleFunc">
                    <ColGroup>
                        <col />
                        <col style="width: 150px;"/>
                        <col style="width: 165px;"/>
                        <col style="width: 170px;"/>
                        <col />
                    </ColGroup>
                    <HeaderContent>
                        <MudTh> Name</MudTh>
                        <MudTh> Group</MudTh>
                        <MudTh> Type</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Id">@context.Name</MudTd>
                        <MudTd DataLabel="Group">@context.Group</MudTd>
                        <MudTd DataLabel="Type" Style="text-align:left">@context.Type</MudTd>
                    </RowTemplate>
                </MudTable>
            </MudStack>

            <MudCheckBox @bind-Value="LazyDeleted" Label="Lazy Deleted" Color="Color.Secondary"></MudCheckBox>
        </MudForm>
</DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Submit" Disabled="@(_success==false)">Update Signatures</MudButton>
    </DialogActions>
</MudDialog>
