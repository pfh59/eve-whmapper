<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Map" Class="mr-2" />
            Add Map
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formIsValid">
            <MudTextField @bind-Value="_mapName" 
                          Label="Map Name" 
                          Required="true" 
                          RequiredError="Map name is required"
                          MaxLength="255"
                          HelperText="Enter a name for your new map" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Create" Disabled="@(!_formIsValid || _creating)">
            @if (_creating)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            Create
        </MudButton>
    </DialogActions>
</MudDialog>
