@using MudBlazor
@using WHMapper.Models.Db;


<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="@_success" @ref="@_form">
            <MudSelect T="WHAccess" Label="Authorized Access" MultiSelection="true" @bind-Value="_selectedAccess" @bind-SelectedValues="_selectedAccesses" ToStringFunc="@_listConverter">
                @if(_accesses != null)
                {
                    foreach(WHAccess item in _accesses)
                    {
                        <MudSelectItem T="WHAccess" Value="@item">@item.EveEntityName</MudSelectItem>
                    }
                }
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Submit" Disabled="@(_success==false)">Add Map Access</MudButton>
    </DialogActions>
</MudDialog>

