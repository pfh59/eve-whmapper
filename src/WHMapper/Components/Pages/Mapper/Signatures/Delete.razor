<MudDialog>
    <DialogContent>
        @if (SignatureId > 0)
        {
            <MudText Class="pointer-events-none">@MSG_DELETE_SIGNATURE</MudText>
        }
        else
        {
            <MudText Class="pointer-events-none">@MSG_DELETE_SIGNATURES</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Delete</MudButton>
    </DialogActions>
</MudDialog>

